---
import { format } from "date-fns";
import { Newspaper } from "lucide-preact";

import { cn } from "~/utils/cn";
import { loadIcon } from "~/utils/icon";

import type { CollectionEntry } from "astro:content";

type Item = CollectionEntry<"posts">["data"] & {
  href: string;
};

export interface Props {
  class?: string;
  empty?: {
    title?: string;
    description?: string;
  };
  href?: string;
  id: string;
  items: Array<Item>;
  title?: string;
  variant?: "default" | "borderless";
}

const {
  class: className,
  empty,
  href,
  id,
  items,
  title,
  variant = "default",
} = Astro.props as Props;

const hasUrl = !!href;
const TitleComponent = hasUrl ? "a" : "h3";
const anchorProps = hasUrl ? { href } : {};
---

<section
  class={cn(
    "bg-stone-50 dark:bg-stone-950 rounded-xl overflow-auto",
    variant === "default" &&
      title &&
      "border-2 border-gray-200 dark:border-gray-900 px-2 pb-2",
    variant === "borderless" && "bg-transparent dark:bg-transparent",
    className,
  )}
  id={id}
>
  {
    title && (
      <TitleComponent
        class={cn(
          variant === "default" &&
            "absolute -translate-y-3 inline-flex transform-gpu items-center bg-stone-50 dark:bg-stone-950 rounded-full px-4 mx-4 border-2 border-stone-200 dark:border-stone-800 font-bold text-stone-900 dark:text-white text-sm",
          variant === "borderless" &&
            "mb-6 text-2xl font-bold text-gray-900 dark:text-white",
          hasUrl ? "default-transition default-focus" : "",
        )}
        {...anchorProps}
      >
        {title}
      </TitleComponent>
    )
  }

  {
    items.length > 0 ? (
      <ul
        class={cn(
          "flex flex-col space-y-2 dark:space-y-0",
          variant === "default" && "mt-3",
          variant === "borderless" && "space-y-4",
        )}
        role="list"
      >
        {items.map(async (item, index) => {
          const Icon = await loadIcon(item.icon);

          const hasUrl = !!item.href;
          const Component = hasUrl ? "a" : "div";

          return (
            <>
              <li>
                <Component
                  href={item.href}
                  class={cn(
                    "text-stone-700 hover:text-stone-900 dark:text-stone-300 dark:hover:text-stone-200 bg-stone-100 hover:bg-stone-200 dark:bg-stone-900 dark:hover:bg-stone-800 border border-stone-200 hover:border-stone-300 dark:border-stone-800 dark:hover:border-stone-700 flex items-center justify-between space-x-4 p-2.5 rounded-md default-transition default-focus",
                    { "mt-2": index + 1 !== 0 },
                  )}
                >
                  <div class="font-semibold flex items-center space-x-3">
                    <div class="flex-1">
                      <div class="flex items-center space-x-2">
                        <Icon class="w-4 h-4" />
                        <p class="font-serif text-lg">{item.title}</p>
                      </div>
                      {item.description && variant === "borderless" && (
                        <p class="text-sm text-gray-600 dark:text-gray-400 font-normal mt-1 line-clamp-2">
                          {item.description}
                        </p>
                      )}
                    </div>
                  </div>

                  <div class="whitespace-nowrap text-right text-sm">
                    <time
                      class="font-normal"
                      datetime={item.publishedAt.toISOString()}
                      title={format(item.publishedAt, "PPP")}
                    >
                      {format(item.publishedAt, "dd-MM-yyyy")}
                    </time>
                  </div>
                </Component>
              </li>

              {/* {index !== items.length - 1 && (
							<hr class="border border-gray-100 dark:border-gray-900 mb-0" />
						)} */}
            </>
          );
        })}
      </ul>
    ) : (
      <div class="h-full flex items-center justify-center">
        <div class="space-y-2 text-center">
          <Newspaper class="mx-auto" />

          <h3 class="font-semibold text-gray-900 text-md dark:text-gray-200">
            {empty?.title ?? "No posts here yet"}
          </h3>

          <p class="text-gray-600 text-sm dark:text-gray-600 ">
            {empty?.description ?? "Stay tuned for more content soon"}
          </p>
        </div>
      </div>
    )
  }
</section>
